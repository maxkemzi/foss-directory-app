{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"settings": {
		"import/resolver": {
			"typescript": {}
		}
	},
	"extends": [
		"eslint:recommended",
		"airbnb-base",
		"airbnb-typescript/base",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"project": "./eslint.tsconfig.json"
	},
	"rules": {
		"@typescript-eslint/lines-between-class-members": "off",
		"no-console": "off",
		"lines-between-class-members": "off",
		"import/prefer-default-export": "off"
	}
}
