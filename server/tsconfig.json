{
	"compilerOptions": {
		"target": "ES2016",
		"module": "commonjs",
		"rootDir": ".",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"#src/*": ["src/*"]
		},
		"types": ["vitest/globals"]
	},
	"include": ["src/**/*.ts", "__tests__/**/*.ts"]
}
