{
	"compilerOptions": {
		"target": "ES2016",
		"module": "commonjs",
		"rootDir": ".",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"#src/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", "scripts/**/*.ts"]
}
