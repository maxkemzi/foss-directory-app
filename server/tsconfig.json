{
	"compilerOptions": {
		"target": "ES2016",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
